<Page
    x:Class="IoTLED.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoTLED"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="LEDControl" Text="Controllo di un LED usando l'IoT!" Margin="10" IsReadOnly="True"/>
            <TextBox x:Name="Status" Text="Status: In attesa" Margin="10" IsReadOnly="True"/>
            <Button x:Name="LedOn" Content="Led Acceso"  Margin="10" HorizontalAlignment="Center" Click="LedOn_Click"/>
            <Button x:Name="LedOff" Content="Led Spento"  Margin="10" HorizontalAlignment="Center" Click="LedOff_Click"/>
            <Button x:Name="Lampeggio" Content="Lampeggio" Margin="10" HorizontalAlignment="Center" Click="Lampeggio_Click"/>
        </StackPanel>
    </Grid>
</Page>
